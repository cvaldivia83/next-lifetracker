# ---- Development Stage ----
FROM node:22-slim

LABEL maintainer="valdivia.carla@gmail.com"

WORKDIR /app

COPY package*.json ./
COPY tsconfig*.json ./

RUN npm install --frozen-lockfile || npm install

COPY . .

EXPOSE 3000

ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

CMD ["npm", "run", "dev"]
